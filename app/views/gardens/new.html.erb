
<div class="container">
<div class="row">
<div class="col-6">

<%= simple_form_for @garden do |f| %>
  <%= f.input :title %>
  <%= f.input :address, class: "garden_address" %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Add a Garden", class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>