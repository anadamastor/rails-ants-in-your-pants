<h1>Bookings#index</h1>

<% # this checks if there are bookings and shows them if so %>
<% if @bookings.empty? %>
  <h2>no bookings found for <%= @garden.title %></h2>
<% else %>
  <p> Found <%=@bookings.length%> booking/s for <%= @garden.title %></p>
  <% @bookings.each do |booking| %>
    <p> ---- </p>
    <p><%= link_to booking.id, garden_booking_path(@garden, booking)  %></p> 
    <p> starting at <%=  booking.start_date  %></p>
    <p>until <%= booking.end_date %></p>
    <p> ---- </p>
  <% end %>
<% end %>


<%= link_to "Go back", gardens_path, class: "btn btn-primary" %> 
<%= link_to "Create a booking", new_garden_booking_path, class: "btn btn-primary" %> 